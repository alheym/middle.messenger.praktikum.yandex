{
	"extends": [
		"airbnb"
	],
	"parser": "@typescript-eslint/parser",
	"plugins": [
		"@typescript-eslint",
		"import"
	],
	"ignorePatterns": [
		"/node_modules",
		"server.js",
		"/dist"
	],
	"env": {
		"browser": true
	},
	"rules": {
		"no-console": "off",
		"no-alert": "off",
		"no-restricted-globals": "off",
		"no-named-as-default": "off",
		"array-callback-return": "off",
		"no-constructor-return": "off",
		"no-continue": "off",
		"no-use-before-define": "off",
		"consistent-return": "off",
		"no-prototype-builtins": "off",
		"import/no-unresolved": "error",
		"import/prefer-default-export": "off",
		"import/no-cycle": "off",
		"no-restricted-exports": "off",
		"one-var": "off",
		"prefer-destructuring": "off",
		"max-classes-per-file": [
			"error",
			{
				"ignoreExpressions": true,
				"max": 2
			}
		],
		"no-useless-constructor": "off",
		"no-restricted-syntax": "off",
		"no-empty-function": [
			"error",
			{
				"allow": [
					"constructors",
					"methods"
				]
			}
		],
		"import/extensions": [
			"error",
			"ignorePackages",
			{
				"js": "never",
				"jsx": "never",
				"ts": "never",
				"tsx": "never"
			}
		],
		"indent": [
			"error",
			"tab"
		],
		"no-tabs": [
			"error",
			{
				"allowIndentationTabs": true
			}
		],
		"class-methods-use-this": [
			"off"
		],
		"max-len": [
			"warn",
			{
				"code": 200
			}
		],
		"no-underscore-dangle": [
			"error",
			{
				"allowAfterThis": true,
				"allow": [
					"__instance"
				]
			}
		],
		"no-unused-vars": "off",
		"@typescript-eslint/no-unused-vars": [
			"warn",
			{
				"argsIgnorePattern": "^_"
			}
		],
		"no-param-reassign": [
			"warn",
			{
				"props": false
			}
		],
		"no-shadow": "off"
	},
	"settings": {
		"import/parsers": {
			"@typescript-eslint/parser": [
				".ts",
				".tsx"
			]
		},
		"import/resolver": {
			"typescript": {
				"alwaysTryTypes": true
			}
		}
	}
}
